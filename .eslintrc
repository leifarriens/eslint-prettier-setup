{
  "root": true,
  "env": {
    "browser": false,
    "commonjs": true,
    "node": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended",
    // "plugin:node/recommended", // NodeJS
    // "plugin:react/recommended", // React
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      // "jsx": true // JSX, React
    }
  },
  "settings": {
    "react": {
      // "version": "detect" // React
    }
  },
  "plugins": [
    // "react", // React
    "simple-import-sort",
    "sort-keys-fix",
    "prettier"
  ],
  "rules": {
    "simple-import-sort/imports": ["warn"],
    "simple-import-sort/exports": ["warn"],
    "sort-keys-fix/sort-keys-fix": ["warn"],
    "prettier/prettier": ["warn"]
  }
}
